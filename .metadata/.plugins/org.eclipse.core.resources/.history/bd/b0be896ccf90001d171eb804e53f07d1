<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="qna">

	<!-- 목록 -->
	<select id="qnaList" resultType="kr.go.me.dto.QnaDTO">
		select * from qna order by parno desc, no asc, lev asc
	</select>
	
	<!-- 상세 -->
	<select id="qnaDetail" resultType="kr.go.me.dto.QnaDTO">
		select * from qna where no=#{no}
	</select>
	
	<!-- 질문 작성 -->
	<insert id="qWrite">
		insert into qna(title, content, author, lev, sec) values (#{title},#{content},#{author},#{lev},'N')
	</insert>
	
	<!-- 답변 작성 -->
	<!-- parno - 어떤 질문에 대한 답변인지 구분 -->
	<insert id="aWrite">
		insert into qna(title, content, author, lev, parno, sec) values (#{title},#{content},#{author},#{lev},#{parno},'N')
	</insert>
	
	<!-- 글 삭제 -->
	<delete id="qnaDelete">
		delete from qna where no=#{no}
	</delete>
	
	<!-- 글 수정 -->
	<update id="qnaUpdate">
		update qna set title=#{title},content=#{content},sec=#{sec} where no=#{no} 
	</update>
	























</mapper>