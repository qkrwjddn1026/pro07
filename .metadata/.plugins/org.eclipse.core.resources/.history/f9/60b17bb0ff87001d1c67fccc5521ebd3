<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC 
"-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="board">
	<!-- 공지사항 목록 -->
	<select id="boardList" resultType="kr.go.me.dto.BoardDTO">
		select * from board
	</select>
	
	<!-- 공지사항 상세보기 -->
	<select id="boardDetail" resultType="kr.go.me.dto.BoardDTO">
		select * from board where no=#{no}
	</select>
	
	<!-- 공지사항 수정 -->
	<update id="updateBoard">
		update board set title=#{title}, content=#{content} where no=#{no}
	</update>
	
	<!-- 공지사항 등록 -->
	<insert id="insertBoard">
		insert board (title,content,author) values (#{title},#{content},'admin')
	</insert>
	
	<!-- 공지사항 삭제 -->
	<delete id="deleteBoard">
		delete from board where no=#{no}
	</delete>
	
	<!-- 조회수 -->
	<update id="visitedUp">
		update board set visited=#{visited} where no=#{no}
	</update>
</mapper>