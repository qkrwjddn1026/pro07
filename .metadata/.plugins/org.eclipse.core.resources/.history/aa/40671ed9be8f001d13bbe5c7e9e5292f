<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC 
"-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="member">
	<!-- 회원 목록 -->
	<select id="memberList" resultType="kr.go.me.dto.MemberDTO">
		select * from member
	</select>
	
	<!-- 회원 정보 보기 -->
	<select id="getMember" resultType="kr.go.me.dto.MemberDTO">
		select * from member where id=#{id}
	</select>
	
	<!-- 로그인 : 컨트롤러에서 처리 -->
	<select id="signIn" resultType="kr.go.me.dto.MemberDTO">
		select * from member where id = #{id }
	</select>
	<!-- 로그인 : DAO에서 처리 -->
	<select id="loginCheck" resultType="kr.go.me.dto.MemberDTO">
		select id, pw, name from member where id = #{id }
	</select>
	<!-- 로그인 : AJax로 로그인 처리 -->	
	<select id="login" resultType="kr.go.me.dto.MemberDTO">
		select id, pw, name from member where id = #{id }
	</select>	
	
	<!-- 회원 가입 -->
	<insert id="memberInsert">
		insert into member(id,pw,name,tel,addr,addr2,postcode,regdate) values (#{id}, #{pw}, #{name}, #{tel}, #{addr},#{addr2},{postcode},default)
	</insert>
	
	<!-- 회원 정보 변경  -->
	<update id="memberUpdate">
	update member set pw=#{pw }, name=#{name }, tel=#{tel }, addr=#{addr } where id = #{id }
	</update>
	
	<!-- 회원 탈퇴 -->	
	<delete id="memberDelete">
	delete from member where id=#{id }	
	</delete>
	
</mapper>